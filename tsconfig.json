{
	"compilerOptions": {
		"incremental": true,
		"target": "es6",
		"lib": ["esnext", "dom"],
		"module": "esnext",
		"moduleResolution": "node",
		"sourceMap": true,
		"inlineSources": true,
		"allowJs": true,
		"checkJs": true,
		"outDir": "./dist",
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"strict": true,
		"skipLibCheck": true,
		"resolveJsonModule": true
	},
	"include": [ "src/" ]
}
